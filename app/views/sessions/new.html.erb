<div id="login">
  <div>
    <%= form_with model: @credential, url: [:session] do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <%= form.button "login", type: :submit, class: "btn btn-secondary", data: { disable_with: "loging in..."} %>
    <% end %>
    <p>or</p>
    <p><%= link_to 'Register', [:new, :registration], class: "btn" %></p>
  </div>
</div>
